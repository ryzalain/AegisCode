{
  "name": "aegiscode",
  "version": "1.0.0",
  "description": "The Ultimate Self-Hosted AI Code Editor",
  "main": "index.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd src/backend && npm run lint",
    "lint:frontend": "cd src/frontend && npm run lint"
  },
  "keywords": [
    "ai",
    "code-editor",
    "self-hosted",
    "vscode",
    "extensions",
    "agentic"
  ],
  "author": "AegisCode Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/[YOUR_USERNAME]/AegisCode.git"
  },
  "bugs": {
    "url": "https://github.com/[YOUR_USERNAME]/AegisCode/issues"
  },
  "homepage": "https://github.com/[YOUR_USERNAME]/AegisCode#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
