{
  "name": "aegiscode-ai-assistant",
  "displayName": "AegisCode AI Assistant",
  "description": "AI-powered code assistant for AegisCode",
  "version": "1.0.0",
  "publisher": "aegiscode",
  "engines": {
    "vscode": "^1.74.0",
    "aegiscode": "^1.0.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aegiscode.aiAssistant.generateCode",
        "title": "Generate Code with AI",
        "category": "AI Assistant"
      },
      {
        "command": "aegiscode.aiAssistant.explainCode",
        "title": "Explain Code",
        "category": "AI Assistant"
      },
      {
        "command": "aegiscode.aiAssistant.refactorCode",
        "title": "Refactor Code",
        "category": "AI Assistant"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aegiscode.aiAssistant.explainCode",
          "when": "editorHasSelection",
          "group": "ai"
        },
        {
          "command": "aegiscode.aiAssistant.refactorCode",
          "when": "editorHasSelection",
          "group": "ai"
        }
      ],
      "commandPalette": [
        {
          "command": "aegiscode.aiAssistant.generateCode"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
